@model Blog.Model.BlogModel

<div class="blog">
    <div class=" row panel-heading">
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.DOP)
        </div>
        <div class="col-lg-6">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="col-lg-3">
            @Html.DisplayNameFor(model => model.Author)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Model.DOP
        </div>
        <div class="col-lg-6">
            @Model.Title
        </div>
        <div class="col-lg-3">
            @Model.Author
        </div>
    </div>
    <hr />
    <div class="row panel-heading">
        <div class="col-lg-12">
            @Html.DisplayNameFor(model => model.Description)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Model.Description
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-4">
            @Html.DisplayNameFor(model => model.Likes)
        </div>
        <div class="col-lg-4">
            @Html.DisplayNameFor(model => model.Report)
        </div>
        <div class="col-lg-4">
            @if (User.Identity.Name == Model.Author)
            {
                @Html.ActionLink("Details", "Details", new { id = Model.Author })
            }
        </div>
    </div>
    <div class="row panel-heading">
        <div class="col-lg-6">
            @Model.Likes
        </div>
        <div class="col-lg-6">
            @Model.Report
        </div>
    </div>
</div>

<style>
    .blog{
        border: 1px solid;
        padding : 10px;
        margin: 10px;
        border-radius:5px;
        background-color: antiquewhite;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
</style>